.main-site-nav
  position absolute
  top 2em

  width 85%
  columns(1)
  z-index 999
  color: lg
  border-bottom solid 1px white
  

  section
    ul
      list-style none
      
      li
        display inline-block
        margin 1em
        a
          text-decoration none
          color lg
          &:hover
            color dg
          
  .title
    padding-top .9em
    column(.2)
  .site-navigation
    column(.5)
  .social-media
    column(.2)
    text-align right
    ul a img
      height 1em
      