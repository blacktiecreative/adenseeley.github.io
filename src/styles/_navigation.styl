.menu-side
  background dg
  border-right 1px solid black
  color white 
  position fixed
  top 0 
  left -100vw
  width 100vw
  height 100vh
 
 .menu
   overflow-x hidden
   relative left 0
   transition left 500ms ease
   z-index 1 
   
.menu-open
  left 100vw
  .menu-side
    left 0
    transition left 500ms ease 
    padding 2rem
    z-index 999
    .menu-toggle
      float right
      margin-right 4em
      color lg
      &:hover
        white
      
#opener
  fixed top 20px left 8px
  margin-left 2rem
  color lg
  z-index 10
  &:hover
    white
  
